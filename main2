trainings = {
    'Федорчук': {
        'Посада': 'Лідер',
        'Коефіцієнт ефективності': '76,6',
        'Назви останніх трьох проектів': ['База даних', 'кібербезпека', 'оформлення проектів']
    },
    'Григоренко': {
        'Посада': 'Заступник Лідера',
        'Коефіцієнт ефективності': '70,5',
        'Назви останніх трьох проектів': ['архів даних', 'бібліотека', 'pygame']
    },
    'Бондаренко': {
        'Посада': 'Головний відділу',
        'Коефіцієнт ефективності': '67,3',
        'Назви останніх трьох проектів': ['тренінг', 'корегування архіву даних', 'виправлення помилок pygame']
    },
    'Підсумкова характеристика робітників': {
        'Прізвища всіх співробітників': ['Федорчук', 'Григоренко', 'Бондаренко'],
        'Прізвище найефективнішого співробітника': 'Федорчук',
        'Посади усіх співробітників' : ['Лідер', 'Заступник Лідера', 'Головний відділу']
    }
}
print('Команда Proteam')
a = input('Прізвища усіх робітників:')
while a != 'off':
    if int(a) == 1:
        for training in trainings:
            print('-', training)
    if int(a) == 2:
        b = input('Прізвище робітника:')
        if b in trainings:
            for tr in trainings[b]:
                print(trainings[b][tr])
        else:
            print('Такого робітника немає!')
    a = input('Номер дії (off-вийти):')
